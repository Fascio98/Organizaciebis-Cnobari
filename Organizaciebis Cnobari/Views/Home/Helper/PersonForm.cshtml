@model Person
<div class="form-group row" style="width:500px">
    <label asp-for="Name">სახელი</label>
    <div class="col sm-10">
        <input type="text" asp-for="Name" class="form-control" width="10" />
    </div>
    <span class="text-danger" asp-validation-for="Name"></span>
</div>
<div class="form-group row" style="width:500px">
    <label asp-for="LastName">გვარი</label>
    <div class="col sm-10">
        <input type="text" asp-for="LastName" class="form-control"  />
    </div>
    <span class="text-danger" asp-validation-for="LastName"></span>
</div>
<div class="form-group row" style="width:500px">
    <label asp-for="PersonalID">პირადი ნომერი</label>
    <div class="col sm-10">
        <input type="text" asp-for="PersonalID" class="form-control" />
    </div>
    <span class="text-danger" asp-validation-for="PersonalID"></span>
</div>
<div class="form-group row" style="width:500px">
    <label asp-for="BirthDay">დაბადების დღე</label>
    <div class="col sm-10">
        <input type="date" asp-for="BirthDay" class="form-control" />
    </div>
    <span class="text-danger" asp-validation-for="BirthDay"></span>
</div>
<div class="form-group row" style="width:500px">
    <label asp-for="TelephoneNumbers">ტელეფონის ნომრები</label>
    <div class="col sm-10">
        <input type="text" asp-for="TelephoneNumbers" class="form-control" />
    </div>
    <span class="text-danger" asp-validation-for="TelephoneNumbers"></span>
</div>

