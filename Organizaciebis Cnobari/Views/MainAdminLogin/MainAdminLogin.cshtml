@model MainAdmin
@{
    ViewData["Title"] = "მთავარი ადმინის ლოგინი";
    Layout = "~/Views/Shared/_MainAdminLoginLayout.cshtml";
}
<div class="form-horizontal">
    <form asp-action="MainAdminLogin" asp-controller="MainAdminLogin" method="Post" style="margin-left:300px">
        <div class="form-group row" style="width:500px">
            <label asp-for="UserName">მომხმარებლის სახელი</label>
            <div class="col sm-10">
                <input type="text" asp-for="UserName" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>
        <div class="form-group row" style="width:500px">
            <label asp-for="Password">მომხმარებლის პაროლი</label>
            <div class="col sm-10">
                <input type="password" asp-for="Password" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <button type="submit" class="btn btn-primary">შესვლა</button>
    </form>
</div>

